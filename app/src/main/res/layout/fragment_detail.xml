<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gmail.lgelberger.popularmovies.DetailActivityFragment"
    tools:showIn="@layout/activity_detail">


    <TextView
        android:id="@+id/textview_original_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Original Title"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageview_poster_thumbnail"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_plot_synopsis"
        android:text="Plot Sysnopsis"
        android:layout_alignBottom="@id/imageview_poster_thumbnail"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_user_rating"
        android:text="User Rating"
        android:layout_below="@+id/textview_plot_synopsis"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_release_date"
        android:text="Release Date"
        android:layout_below="@+id/imageview_poster_thumbnail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



</RelativeLayout>
